<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.ForgotPassword"
             Title="ForgotPassword">
    <StackLayout>
          <Frame

            CornerRadius="35"
            WidthRequest="318"
             HeightRequest="72">
            <Entry
                
            HorizontalTextAlignment="Start"
            Keyboard="Numeric"
            FontSize="17"
            MaxLength="11"
            HeightRequest="50"
            WidthRequest="260"
            Placeholder="09123456789"/>
        </Frame>
          <Frame
       
             CornerRadius="35"
             WidthRequest="318"
             HeightRequest="72">
                <Entry 
              HorizontalTextAlignment="Start"
             Keyboard="Numeric"
             FontSize="17"
              MaxLength="11"
             HeightRequest="50"
              WidthRequest="260"
             Placeholder="0926031724"
                />

          </Frame>

        <Button
          Text="Add"
         BackgroundColor="#D9D9D9"
         TextColor="#000000"
         FontSize="30"
         FontAttributes="Bold"
         CornerRadius="10"
         WidthRequest="120"
         HeightRequest="70"
         Margin="0, 30, 0, 20"
         Clicked="Addus_Clicked"
    
        />
        

    </StackLayout>
</ContentPage>