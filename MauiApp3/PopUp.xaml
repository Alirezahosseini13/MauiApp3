<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiApp3.PopUp">
    
      <StackLayout>
        <Frame
         Margin="10"
         WidthRequest="250"
            HeightRequest="70"
          CornerRadius="20">
            <Label
           Text="All Tasks = 10"
           FontSize="25"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           />
        </Frame>
        
 
        <Frame
         Margin="10"
         WidthRequest="250"
                        HeightRequest="70"

         CornerRadius="20">
            <Label
           Text="Tasks Completed = 5"
           FontSize="20"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           />
        </Frame>

        <Frame
 Margin="10"
 WidthRequest="250"
                HeightRequest="70"

 CornerRadius="20">
            <Label
   Text="Tasks unCompleted = 5"
   FontSize="19"
   FontAttributes="Bold"
   HorizontalOptions="Center"
   />
        </Frame>


    </StackLayout>
   
</toolkit:Popup>