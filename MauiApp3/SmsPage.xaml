<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.SmsPage"
             Title="SmsPage">

    <StackLayout
                Orientation="Vertical">

        <Label
            Text="S M S"
            FontSize="150"
            HorizontalOptions="Center"
            TextColor="White"
            Margin="0, 30, 0, 190"/>
        <Frame
            WidthRequest="250">
            <Entry
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                Keyboard="Numeric"
                FontSize="40"
                MaxLength="5"
                Placeholder="SMS Code"
                x:Name ="smsEntry"
                />
            
        </Frame>
        <Label
            x:Name="timerLabel"
            Text="2:00"
            TextColor="#043927"
            HorizontalOptions="Center"
            Margin="0, 30, 0, 0"
            FontSize="50"/>
        
        <Button
    BackgroundColor="#FFFFFF"
    CornerRadius="35"
    WidthRequest="318"
    HeightRequest="58"
    Text="Login"
    TextColor="Black"
    FontSize="26"
    FontAttributes="Bold"
    Clicked="loginButton"/>

    </StackLayout>
</ContentPage>