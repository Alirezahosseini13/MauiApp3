<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.AssingPage"
             Title="AssingPage">
    <VerticalStackLayout
      VerticalOptions="CenterAndExpand">

        <Label 
         Margin="30"
         Text="Assing  To"
         FontAttributes="Bold"
         FontSize="30"
         VerticalOptions="Center" 
         HorizontalOptions="Center"
        />
        
        <Button 
       Text="User" 
       FontSize="20" 
       WidthRequest="330" 
       HeightRequest="60" 
       Margin="10" 
       Clicked="User_Clicked_1" 
       BackgroundColor="Black" 
       TextColor="#999DAD" 
       CornerRadius="35" />

        <Label 
          Margin="30"
          Text="OR"
          FontAttributes="Bold"
          FontSize="30"
          VerticalOptions="Center" 
          HorizontalOptions="Center" />
        <Button 
       Text="Group" 
       FontSize="20" 
       WidthRequest="330" 
       HeightRequest="60" 
       Margin="0,10,0,20" 
       Clicked="Group_Clicked" 
       BackgroundColor="Black" 
       TextColor="#999DAD" 
       CornerRadius="35" />
    </VerticalStackLayout>
</ContentPage>